extends _wrapper.pug

block content
    body
        div(id="spriteSvg" data-svg="/assets/svg/svg.svg")
            
        header
            .container
                include includes/langSelector.pug
            .container.menu-container.menu-container--top
                include includes/navigation.pug
        main
            .container
                each category, key in posts
                    each post, key in category
                        div
                            p
                                |!{post.date}
                            a(href=post.permalink)
                                |!{post.data.title}
                            p
                                |!{post.data.description}
                            p
                                |in !{post.category}
                            hr
                
                include includes/pagination.pug
        
