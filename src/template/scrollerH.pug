extends default/_wrapper.pug

block content
    header
        .container
            include ../includes/langSelector.pug
        .container.menu-container.menu-container--top
            include ../includes/navigation.pug
    main
        .container.clearfix(style='margin-left:200px;')
            .scrollerH-container
                .scrollerH
                    .scrollerH__item
                    .scrollerH__item
                    .scrollerH__item
                        .parallax__container(style="display:inline-block;")
                            .parallax__item(
                                data-conponent='m-comp--parallax',
                                data-direction='horizontal'
                                data-scroller='.scrollerH-container .scrollerH'
                                data-align='start',
                                data-smoothType = 'linear'
                                data-propierties='horizontal')
                                a(href="https://www.google.com/" target="_blank")
                                    |button
                    .scrollerH__item
                        .parallax__container(style="display:inline-block;")
                            .parallax__item(
                                data-conponent='m-comp--parallax',
                                data-direction='horizontal'
                                data-scroller='.scrollerH-container .scrollerH'
                                data-onSwitch='out'
                                data-range='4'
                                data-reverse
                                data-smoothType='linear'
                                data-propierties='horizontal')
                                .parallax__item(
                                    data-conponent='m-comp--parallax',
                                    data-direction='horizontal'
                                    data-scroller='.scrollerH-container .scrollerH'
                                    data-onSwitch='stop'
                                    data-range='9'
                                    data-reverse
                                    data-smoothType='linear'
                                    data-propierties='horizontal')
                                    |test
                    .scrollerH__item
                        .parallax__container(style="display:inline-block;")
                            .parallax__item(
                                data-conponent='m-comp--parallax',
                                data-direction='horizontal'
                                data-scroller='.scrollerH-container .scrollerH'
                                data-smoothType='linear'
                                data-opacityStart='100'
                                data-opacityend='50'
                                data-propierties='opacity')
                                |test
                    .scrollerH__item
                        .pluto(style='width:200px;height:150px;border:1px #000 solid;')
                            .parallax__container(style="display:inline-block;border:1px #000 solid;")
                                .parallax__item(
                                    data-conponent='m-comp--parallax',
                                    data-direction='horizontal'
                                    data-scroller='.scrollerH-container .scrollerH'
                                    data-computationType='fixed'
                                    data-triggerEl='.pluto'
                                    data-smoothType='linear'
                                    data-reverse
                                    data-range='100')
                                    |test
                    .scrollerH__item
                        
            .scrollerH-container2
                .scrollerH2
                    .scrollerH2__item
                    .scrollerH2__item
                    .scrollerH2__item
                        .parallax__container(style="display:inline-block;")
                            .parallax__item(
                                data-conponent='m-comp--parallax',
                                data-direction='horizontal'
                                data-scroller='.scrollerH-container2 .scrollerH2'
                                data-screen='.scrollerH-container2'
                                data-smoothType='linear'
                                data-reverse
                                data-onSwitch='stop'
                                data-propierties='horizontal')
                                |test
                    .scrollerH2__item
                        .pluto2(style='width:300px;height:100px;border:1px #000 solid;')
                            .parallax__container(style="display:inline-block;")
                                .parallax__item(
                                    data-conponent='m-comp--parallax',
                                    data-direction='horizontal'
                                    data-scroller='.scrollerH-container2 .scrollerH2'
                                    data-screen='.scrollerH-container2'
                                    data-computationType='fixed'
                                    data-triggerEl='.pluto2'
                                    data-reverse
                                    data-range='100'
                                    data-propierties='horizontal'
                                    data-smoothType='linear')
                                    |test
                    .scrollerH2__item
                    .scrollerH2__item
                    .scrollerH2__item
            
            .scrollerH-container3
                .scrollerH3
