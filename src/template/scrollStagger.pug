extends default/_wrapper.pug

block content
    header
        .container
            include ../includes/langSelector.pug
        .container.menu-container.menu-container--top
            include ../includes/navigation.pug
    main
      
      - const items = 30;
      svg.mySvg(viewBox="0 0 100 100")
        lineargradient#gradient()
          stop(offset='0%' stop-color='#4c0505')
          stop(offset='100%' stop-color='#FF0000')
        each i in [...Array(items).keys()]
          - const strokeStyle = parseInt(i) === 20 ? '#fff' : 'url(#gradient)';
          rect(stroke=strokeStyle)
        

      .scrollStagger
      
