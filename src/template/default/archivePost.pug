extends wrapper.pug

block content
    
    header
        .container
            include ../../includes/langSelector.pug
        .container.menu-container.menu-container--top
            include ../../includes/navigation.pug
    main
        .container
            if posts
                each category, key in posts
                    each post, key in category
                        div
                            p
                                |#{ssgDate(ssgPrint(post, 'date'))}
                            a(href=ssgPrint(post, 'permalink'))
                                |#{ssgPrint(post, 'data', 'title')}
                            p
                                |#{ssgPrint(post, 'data', 'description')}
                            a(href=ssgCategoryPermalink(post.category))
                                |in #{ssgCategoryName(post.category)}
                            div
                                |tag:
                            div
                                each tag, key in post.tag
                                    a(href=ssgTagPermalink(tag))
                                        | #{ssgTagName(tag)} |
                            hr
                                
